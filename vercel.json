{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js",   "use": "@vercel/node" },
    { "src": "form/**/*.js",  "use": "@vercel/static" },
    { "src": "public/**/*",   "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.js" },
    { "src": "/form/(.*)", "dest": "/form/$1" },
    { "src": "/(.*)",      "dest": "/public/$1" }
  ]
}
